extends ../layouts/main-layout.pug
block content
	.container.ic
		.row
			form(action='/admin/add-product', method='POST')
				.row
					.col.s8.ic-col
						.input-field.col.s12.l6
							input#name.validate(name ='name',type='text', )
							label(for='name') Product Name
						.input-field.col.s12.l6
							input#image.validate(name='image',type='text',)
							label(for='image') Image
						.input-field.col.s12.l6
							input#price.validate(name='price',type='text')
							label(for='price') Price
						.input-field.col.s12.l6
							input#state.validate(name='state',type='text')
							label(for='state') Product State
						.input-field.col.s12.l6
							if categories.length >0
								select(name='categoryid',class='browser-default')
									option(value='') Category
									each category in categories
										option(value=`${category.id}`) #{category.name}
											
						.input-field.col.s12
							button.btn.waves-effect.waves-light(type='submit', name='submit')| Submit
	

