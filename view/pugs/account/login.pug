extends ../layouts/main-layout.pug
block content
	.container.ic
		.row
			if errorMessage
				.card-panel.red
					.card-content.white-text
						span.card-title #{errorMessage}
			if tempData
				form(action='/login', method='POST')
					.row
						.col.s8.ic-col
							.input-field.col.s12.l6
								input#email.validate(name ='email',type='email', value=`${tempData.email}` )
								label(for='email') Email
							.input-field.col.s12.l6
								input#password.validate(name='password',type='password',)
								label(for='password') Password
							.input-field.col.s12.l6
								button.btn.waves-effect.waves-light(type='submit', name='submit',)| Login
							.input-field.col.s12.l6
								a(href='/reset-password') I don't remember my password
			else
				form(action='/login', method='POST')
					.row
						.col.s8.ic-col
							.input-field.col.s12.l6
								input#email.validate(name ='email',type='email', )
								label(for='email') Email
							.input-field.col.s12.l6
								input#password.validate(name='password',type='password',)
								label(for='password') Password
							.input-field.col.s12.l6
								button.btn.waves-effect.waves-light(type='submit', name='submit',)| Login
							.input-field.col.s12.l6
								a(href='/reset-password') I don't remember my password


