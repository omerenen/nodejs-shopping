                img.materialboxed(width='360', src=`/img/${product.image}`)
            .col.s6
                h2 #{product.name}
                .divider
                .row(style='padding-top:15px')
                    .col.s4
                        h6(style='padding-left:10px') â‚º#{product.price}
                    .col.s8.offset
                    form(action='/cart', method='POST')
                        input#name.validate(type='hidden', name='productId',value=`${product.id}`)
                        button.white-text.text-darken-3.btn.teal.z-depth-1.waves-light.waves-effect(type='submit', name='submit') Add Card

                .divider
                p #{product.state}
